        <script>
            function sendToMail() {
                 event.preventDefault();

                var lastName = document.getElementById("inputLastName").value.trim();
                var firstName = document.getElementById("inputFirstName").value.trim();
                var email = document.getElementById("inputEmail").value.trim();
                var phoneNumber = document.getElementById("inputNumber").value.trim();
                var message = document.getElementById("inputMessage").value.trim();

                // Check if required fields are filled
                if (lastName === '' || firstName === '' || email === '' || phoneNumber === '' || message === '') {
                    alert("Please fill in all required fields.");
                    return;
                }

                var params = {
                    lastName: lastName,
                    firstName: firstName,
                    companyName: email,
                    email: document.getElementById("inputEmail").value.trim(),
                    phoneNumber: phoneNumber,
                    message: message,
                };

                console.log("Params:", params);

                const serviceID = "service_7wmnjwq";
                const templateID = "template_q8rohka";

                try {
                    emailjs.send(serviceID, templateID, params)
                        .then(function (res) {
                            console.log('Email sent:', res);
                            alert("Your Inquiry is sent! Thank you.");
                            document.getElementById("inquiryForm").reset();
                        }, function(error) {
                            console.error('Email send error:', error);
                            alert("Oops! An error occurred while sending your inquiry. Please try again later.");
                        });
                } catch (err) {
                    console.log(err);
                    alert("Oops! An error occurred while sending your inquiry. Please try again later.");
                }
            }

